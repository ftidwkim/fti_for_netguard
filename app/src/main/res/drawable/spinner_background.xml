<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="@color/md_grey_500" />
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#9E9E9E" />
            <padding
                android:bottom="16dp"
                android:left="8dp"
                android:right="8dp"
                android:top="16dp" />
        </shape>
    </item>
    <item
        android:right="0dp"
        android:gravity="center|right"
        android:drawable="@drawable/ic_arrow_collapsed"/>
</layer-list>