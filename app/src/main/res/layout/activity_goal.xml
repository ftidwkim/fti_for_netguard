<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.goal"
    android:background="@color/white"
    tools:ignore="MissingConstraints">
    <include layout="@layout/item_goal"
        android:id="@+id/item_goal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/item_goal">
        <TextView
            android:id="@+id/pick"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="Pick your Diamond Goal Task!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/brandnew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="Brand New Dog!"
            android:textAlignment="center"
            android:textColor="@color/active_token"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/pick"/>
        <ImageView
            android:id="@+id/rewardimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/goal_icon"
            app:layout_constraintTop_toBottomOf="@+id/brandnew"
            android:layout_gravity="center_horizontal"
            app:tint="@color/reward_goal" />
        <TextView
            android:id="@+id/rewardpercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="100%"
            android:textAlignment="center"
            android:textColor="@color/active_token"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/rewardimage"/>
        <TextView
            android:id="@+id/rewardgoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="Goal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/rewardpercentage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="50"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="Available"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/rewardpercentage"/>

        <TableLayout
            android:id="@+id/secondrow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="410dp"
            app:layout_constraintTop_toBottomOf="@id/activeName">
            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/token_icon"
                    android:layout_weight="0.1"
                    app:tint="@color/active_token"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/activecount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="7"
                    android:text="7"
                    android:layout_weight="1.2"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="Amount Needed"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/rewardpercentage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:layout_weight="1"
            android:lines="1"
            android:text="43"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>