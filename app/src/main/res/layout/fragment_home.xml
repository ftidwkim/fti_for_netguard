<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingConstraints"
    tools:context=".home.home">

    <include layout="@layout/item_toolbar"
        android:id="@+id/item_home"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="true"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usertokens"
            android:adjustViewBounds="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="0dp"
                app:cardBackgroundColor="@color/app_color"
                app:cardCornerRadius="15dp"
                app:cardElevation="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/app_color"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="40dp">

                    <TextView
                        android:id="@+id/kidsname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available_tokens"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="0dp"
                android:adjustViewBounds="true"
                android:elevation="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/face"
                />

        </RelativeLayout>

        <TableLayout
            android:id="@+id/secondrow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="-30dp"
            app:layout_constraintTop_toBottomOf="@id/usertokens">
            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_dailyusage"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardMaxElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    tools:ignore="MissingConstraints"
                    android:shadowColor="@color/md_blue_grey_300"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="50">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_usage"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:src="@drawable/timer_icon"
                        app:tint="@color/app_color"
                        android:layout_gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:id="@+id/dailyusage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 remaining"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="16dp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/rewardgoal"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardMaxElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    tools:ignore="MissingConstraints"
                    android:shadowColor="@color/md_blue_grey_300"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="50">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reward_goal"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:src="@drawable/goal_icon"
                        android:layout_gravity="center_vertical|center_horizontal"
                        app:tint="@color/reward_goal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- / -"
                        android:textAlignment="center"
                        android:textColor="@color/reward_goal"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="16dp"
                        android:layout_marginBottom="20dp"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>

            </TableRow>
        </TableLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/pianolessons"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="@color/app_color"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints"
            android:shadowColor="@color/md_blue_grey_300"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="50"
            app:layout_constraintTop_toBottomOf="@+id/secondrow">
            <TableLayout
                android:id="@+id/thirdrow"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="1"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/usertokens">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="3">
                <RelativeLayout android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="1"
                        android:text="Pianno Lessons"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                </RelativeLayout>
                <RelativeLayout android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:src="@drawable/hr_gls_45"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        app:tint="@color/white" />
                </RelativeLayout>
                <RelativeLayout android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="1"
                        android:text="In - minutes"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </TableRow>
            </TableLayout>

        </androidx.cardview.widget.CardView>
        <TableLayout
            android:id="@+id/fourthrow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/pianolessons">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/earn"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="0dp"
                    app:cardBackgroundColor="@color/earn_bg"
                    app:cardMaxElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    tools:ignore="MissingConstraints"
                    android:shadowColor="@color/md_blue_grey_300"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="50">
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="130dp"
                        android:src="@drawable/token_icon"
                        app:tint="@color/earn_img"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/earn"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/rewards"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="0dp"
                    app:cardBackgroundColor="@color/reward_bg"
                    app:cardMaxElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    tools:ignore="MissingConstraints"
                    android:shadowColor="@color/md_blue_grey_300"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="50">
                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="130dp"
                        android:src="@drawable/reward_icon"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"
                        app:tint="@color/reward_img" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rewards"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_gravity="bottom|center_horizontal"
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>

            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>