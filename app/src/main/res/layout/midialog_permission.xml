<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:text="@string/warning"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="App Locker must need to allow the Autostart permission"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:src="@drawable/miper_hint_one" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="App Locker also must need to allow the all permission"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/miper_hint_two"/>

    <TextView
        android:id="@+id/btn_permission"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/round_tabbg"
        android:gravity="center"
        android:text="@string/allow_permission"
        android:textColor="@color/white"/>
</LinearLayout>