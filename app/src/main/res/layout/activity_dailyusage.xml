<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingConstraints"
    tools:context=".home.DailyUsage">
    <include layout="@layout/item_dailyusage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usertokens"
            android:adjustViewBounds="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.cardview.widget.CardView
                android:id="@+id/UsageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="16dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:paddingTop="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical"
                    android:paddingTop="0dp">

                    <TextView
                        android:id="@+id/today_usage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textFontWeight="500"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:layout_marginLeft="@dimen/text_normal"
                        android:layout_weight="0.3"
                        android:text="@string/today_usage"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_todayusage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text=""
                        android:layout_marginLeft="@dimen/text_normal"
                        android:textColor="@color/md_red_800"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/time_remaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_normal"
                        android:textFontWeight="500"
                        android:layout_marginLeft="@dimen/text_normal"
                        android:layout_weight="0.3"
                        android:text="@string/time_remaining"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_timeremaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:layout_marginLeft="@dimen/text_normal"
                        android:textColor="@color/app_color"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:textSize="18dp" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:background="@color/white"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="0dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:src="@drawable/timer_icon"
                            app:tint="@color/app_color"
                            android:layout_gravity="center_vertical|center_horizontal"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/topactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="16dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:background="@color/white"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:paddingTop="0dp">
                <TextView
                    android:id="@+id/txt_topactovity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textFontWeight="500"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/text_normal"
                    android:layout_weight="2"
                    android:text="@string/top_activity"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/usageperday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_marginBottom="0dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="16dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/spacing_large"
                android:background="@color/white"
                android:weightSum="6"
                android:orientation="vertical"
                android:paddingTop="0dp">
                <TextView
                    android:id="@+id/txt_usageperday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textFontWeight="500"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_weight="1"
                    android:text="@string/usage_per_day"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textFontWeight="500"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/text_normal"
                    android:layout_weight="1"
                    android:text="Hours"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    />
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/idBarChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/UsageCard" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</LinearLayout>